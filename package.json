{
  "name": "ctx-sys",
  "version": "1.0.0",
  "description": "Intelligent context management system for AI coding assistants",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ctx-sys": "./dist/cli/index.js",
    "ctx": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli/index.js",
    "dev": "ts-node src/cli/index.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:phase1": "NODE_OPTIONS='--experimental-vm-modules' jest tests/phase-1",
    "test:phase2": "NODE_OPTIONS='--experimental-vm-modules' jest tests/phase-2",
    "test:phase3": "NODE_OPTIONS='--experimental-vm-modules' jest tests/phase-3",
    "test:phase4": "NODE_OPTIONS='--experimental-vm-modules' jest tests/phase-4",
    "test:phase5": "NODE_OPTIONS='--experimental-vm-modules' jest tests/phase-5",
    "test:phase6": "NODE_OPTIONS='--experimental-vm-modules' jest tests/phase-6",
    "test:phase7": "NODE_OPTIONS='--experimental-vm-modules' jest tests/phase-7",
    "test:phase8": "NODE_OPTIONS='--experimental-vm-modules' jest tests/phase-8",
    "test:phase9": "NODE_OPTIONS='--experimental-vm-modules' jest tests/phase-9",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "context",
    "ai",
    "coding-assistant",
    "mcp",
    "embeddings",
    "rag",
    "graph-rag",
    "llm",
    "context-management",
    "developer-tools"
  ],
  "author": "David Franz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidfranz/ctx-sys.git"
  },
  "homepage": "https://ctx-sys.dev",
  "bugs": {
    "url": "https://github.com/davidfranz/ctx-sys/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@vscode/tree-sitter-wasm": "^0.3.0",
    "better-sqlite3": "^12.6.2",
    "commander": "^12.0.0",
    "picomatch": "^4.0.3",
    "smol-toml": "^1.6.0",
    "uuid": "^9.0.0",
    "web-tree-sitter": "^0.26.5",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/picomatch": "^4.0.2",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
